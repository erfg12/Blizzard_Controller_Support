<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow JIT compilation for .NET -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    
    <!-- Allow unsigned executable memory (required for .NET) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- Disable library validation (required for .NET loading) -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- Allow DYLD environment variables -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>
    
    <!-- Network access (if your app needs internet) -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- Outgoing network connections -->
    <key>com.apple.security.network.server</key>
    <true/>
    
    <!-- USB access (for game controllers) -->
    <key>com.apple.security.device.usb</key>
    <true/>
    
    <!-- Bluetooth access (for wireless controllers) -->
    <key>com.apple.security.device.bluetooth</key>
    <true/>
    
    <!-- Input monitoring (required for SharpHook to monitor keyboard/mouse) -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>
</dict>
</plist>