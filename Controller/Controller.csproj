<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <!-- Target plain net8.0 (cross‑platform) -->
    <TargetFramework>net8.0</TargetFramework>
    <OutputType>Exe</OutputType>

    <!-- Keep name consistent -->
    <RootNamespace>Controller</RootNamespace>
    <AssemblyName>Controller</AssemblyName>

    <!-- Remove Windows‑only settings -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <UseWindowsForms>false</UseWindowsForms>

    <!-- Remove Windows‑only manifest and platform target -->
    <!--<ApplicationManifest>app.manifest</ApplicationManifest>-->
    <!--<PlatformTarget>x86</PlatformTarget>-->

    <Version>2.3.0</Version>
    <Authors>Jacob Fliss</Authors>
    <Company>New Age Software</Company>
    <Description>Control your favorite StarCraft and WarCraft games with a game controller.</Description>
    <Product>Blizzard Controller</Product>
    <Title>Blizzard Controller</Title>
    <PackageIcon>frozen-game-controller.png</PackageIcon>
    <ApplicationIcon>frozen-game-controller.ico</ApplicationIcon>
  </PropertyGroup>

  <!-- Remove .nuget clean section (not needed cross‑platform) -->

  <ItemGroup>
    <Content Include="frozen-game-controller.ico" />
  </ItemGroup>

  <PropertyGroup Condition="$([MSBuild]::IsOSPlatform('OSX'))">
  <DefineConstants>$(DefineConstants);MACOS</DefineConstants>
</PropertyGroup>

<PropertyGroup Condition="$([MSBuild]::IsOSPlatform('Linux'))">
  <DefineConstants>$(DefineConstants);LINUX</DefineConstants>
</PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Raylib-cs" Version="7.0.1" />
    <PackageReference Include="System.Configuration.ConfigurationManager" Version="9.0.7" />
    <PackageReference Include="System.Resources.Extensions" Version="9.0.7" />
  </ItemGroup>

  <!-- Keep resources -->
  <ItemGroup>
    <None Update="Resources\*.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>